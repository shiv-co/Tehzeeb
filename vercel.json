{
  "cleanUrls": true,
  "trailingSlash": false,

  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "https://tehzeeb.onrender.com/api/$1"
    }
  ],

  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-store"
        }
      ]
    }
  ],

  "redirects": [
    {
      "source": "/:path*",
      "has": [
        {
          "type": "missing",
          "missing": [
            {
              "type": "file"
            }
          ]
        }
      ],
      "destination": "/index.html",
      "statusCode": 200
    }
  ]
}
