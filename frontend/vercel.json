{
  "version": 2,
  "cleanUrls": true,
  "trailingSlash": false,

  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://tehzeeb.onrender.com/api/:path*"
    }
  ],

  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/index.html",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-store"
        }
      ]
    }
  ],

  "routes": [
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
